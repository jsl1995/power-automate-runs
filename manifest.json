{
  "manifest_version": 3,
  "name": "Flow Run Buddy",
  "version": "1.3.1",
  "description": "View run history for Power Automate Cloud Flows directly from the flow designer",
  "permissions": [
    "activeTab",
    "sidePanel",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://make.powerautomate.com/*",
    "https://make.powerapps.com/*",
    "https://api.flow.microsoft.com/*",
    "https://*.blob.core.windows.net/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://make.powerautomate.com/*",
        "https://make.powerapps.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "Flow Run Buddy"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}